<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mo.quarter.HomeActivity"
    android:id="@+id/home_draw">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:background="@color/colorBlue"
        android:id="@+id/linearLayout">
        <com.meg7.widget.CustomShapeImageView
            android:layout_width="@dimen/x32"
            android:layout_height="@dimen/y24"
            android:src="@mipmap/raw_1499936862"
            app:shape="circle"
            android:layout_gravity="center"
            android:id="@+id/home_head"
            />
        <TextView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="推荐"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorwhite"
            android:textSize="@dimen/x18"
            />
       <ImageView
           android:id="@+id/home_chuangzuo"
           android:layout_width="@dimen/x30"
           android:layout_height="match_parent"
           android:src="@mipmap/bianji"
           />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/home_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_above="@+id/home_foot"
        ></FrameLayout>

   <LinearLayout
       android:id="@+id/home_foot"
       android:layout_width="match_parent"
       android:layout_height="@dimen/y35"
       android:layout_alignParentBottom="true"
       android:orientation="horizontal">
       <LinearLayout
           android:id="@+id/home_tuijian"
           android:layout_width="@dimen/x1"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:orientation="vertical">
           <ImageView
               android:id="@+id/home_tuijian_img"
               android:layout_width="match_parent"
               android:layout_height="@dimen/y20"
               android:src="@mipmap/raw_1500085367"
               />
           <TextView
               android:id="@+id/home_tuijian_text"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="推荐"
               android:gravity="center"
               android:textColor="@color/colorBlue"/>
       </LinearLayout>
       <LinearLayout
           android:id="@+id/home_duanzi"
           android:layout_width="@dimen/x1"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:orientation="vertical">
           <ImageView
               android:id="@+id/home_duanzi_img"
               android:layout_width="match_parent"
               android:layout_height="@dimen/y20"
               android:src="@mipmap/raw_1500085327"
               />
           <TextView
               android:id="@+id/home_duanzi_text"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="段子"
               android:gravity="center"
               android:textColor="@color/colorHui"/>
       </LinearLayout>
       <LinearLayout
           android:id="@+id/home_shipin"
           android:layout_width="@dimen/x1"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:orientation="vertical">
           <ImageView
               android:id="@+id/home_shipin_img"
               android:layout_width="match_parent"
               android:layout_height="@dimen/y20"
               android:src="@mipmap/raw_1500083686"
               />
           <TextView
               android:id="@+id/home_shipin_text"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="视频"
               android:gravity="center"
               android:textColor="@color/colorHui"/>
       </LinearLayout>
   </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:id="@+id/home_left"
        android:background="@color/colorwhite"
        android:clickable="true"
        >
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>
