<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_other_back"
    tools:context=".WangjiPwdActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/wangji_back"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/y20"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/y22"
            android:layout_marginStart="@dimen/x22"
            android:padding="@dimen/x3"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/wangji_yiyou"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y50"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/y10"
            android:gravity="center"
            android:text="已有账号?"
            android:textColor="@color/colorHui" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/y40"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y50"
        android:src="@mipmap/logintop"
        />
    <LinearLayout
        android:id="@+id/rl_background"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y50"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:background="@drawable/hui"
        android:layout_below="@+id/iv"
        android:layout_marginTop="@dimen/y20"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x12"
                android:text="86+ |"
                android:textColor="@color/colorHui" />

            <EditText
                android:id="@+id/wangji_phone"
                android:layout_width="@dimen/x1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入手机号"
                android:textColorHint="@color/colorHui"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/wangji_getcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textColor="@color/colorHui" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginRight="@dimen/x12"
            android:background="@color/colorHui"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/wangji_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:background="@null"
                android:textSize="@dimen/x14"
                android:hint="请输入验证码"
                android:textColorHint="@color/colorHui"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/wangji_next"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y25"
        android:layout_alignLeft="@+id/rl_background"
        android:layout_alignStart="@+id/rl_background"
        android:layout_below="@+id/rl_background"
        android:layout_marginTop="@dimen/x25"
        android:background="@drawable/cheng"
        android:text="下一步"
        android:textColor="@color/colorwhite" />

    <TextView
        android:id="@+id/wangji_youke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wangji_next"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y40"
        android:text="游客登录"
        android:textColor="@color/colorHui" />




</RelativeLayout>
