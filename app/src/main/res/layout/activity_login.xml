<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mo.quarter.LoginActivity">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@mipmap/login1" />

    <ImageView
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/y40"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y50"
        android:src="@mipmap/logintop"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:id="@+id/login_wx"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y25"
        android:background="@drawable/lu"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y65"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/home_wx"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/y25"
            android:src="@mipmap/wx"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="微信登录"
            android:textSize="@dimen/x15"
            android:gravity="center"
            android:textColor="@color/colorwhite"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_qq"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y25"
        android:background="@drawable/lan"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y35"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/home_qq"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/y25"
            android:src="@mipmap/qq"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="QQ登录  "
            android:textSize="@dimen/x15"
            android:gravity="center"
            android:textColor="@color/colorwhite"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/login_other"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y20"
        android:text="其他方式登录"
        android:gravity="center"
        android:textColor="@color/colorHui"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y10"
        />
    <ImageView
        android:id="@+id/login_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/back"
        android:padding="10dp"/>
</RelativeLayout>
