<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_other_back"
    tools:context=".RegisterActivity">


    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/reg_back"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/y20"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/y22"
            android:layout_marginStart="@dimen/x22"
            android:padding="@dimen/x3"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/reg_yiyou"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y50"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/y10"
            android:gravity="center"
            android:text="已有账号?"
            android:textColor="@color/colorHui" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/y40"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y50"
        android:src="@mipmap/logintop"
        />


    <LinearLayout
        android:id="@+id/rl_background"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y50"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/hui"
        android:orientation="vertical"
        android:layout_below="@id/iv"
        android:layout_marginTop="@dimen/y50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            >
            <EditText
                android:id="@+id/reg_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x8"
                android:background="@null"
                android:textSize="14sp"
                android:textColor="@color/colorHui"
                android:hint="请输入手机号"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginRight="@dimen/x12"
            android:background="@color/colorHui"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">


            <EditText
                android:id="@+id/reg_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x8"
                android:background="@null"
                android:textSize="@dimen/x12"
                android:textColor="@color/colorHui"
                android:hint="输入大小写和数字,密码不能超过8位"
                />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/reg_reg"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y25"
        android:layout_alignLeft="@+id/rl_background"
        android:layout_alignStart="@+id/rl_background"
        android:layout_below="@+id/rl_background"
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/cheng"
        android:text="注册"
        android:textColor="@color/colorwhite" />

    <TextView
        android:id="@+id/reg_youke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_reg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y45"
        android:text="游客登录"
        android:textColor="@color/colorHui" />
</RelativeLayout>
