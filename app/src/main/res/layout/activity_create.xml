<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mo.quarter.CreateActivity"
    android:background="@mipmap/raw_1500866926"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:background="@color/colorBlue"
        android:id="@+id/linearLayout3">
        <TextView
            android:id="@+id/creat_back"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:text="取消"
            android:gravity="center"
            android:textColor="@color/colorwhite"
            android:textSize="@dimen/x15"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="创作"
            android:paddingRight="@dimen/x40"
            android:textColor="@color/colorwhite"
            android:textSize="@dimen/x15"
            />
    </LinearLayout>

    <com.meg7.widget.CustomShapeImageView
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/x60"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y60"
        android:src="@mipmap/shi"
        android:id="@+id/creat_shipin"
        app:shape="circle"/>

    <com.meg7.widget.CustomShapeImageView
        android:id="@+id/creat_duanzi"
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/x60"
        android:layout_alignLeft="@+id/creat_shipin"
        android:layout_alignStart="@+id/creat_shipin"
        android:layout_centerVertical="true"
        android:src="@mipmap/duan"
        app:shape="circle"/>
</RelativeLayout>
